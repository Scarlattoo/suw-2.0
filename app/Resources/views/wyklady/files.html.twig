{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Przeglądaj wykłady{% endblock %}
{% block body %}
    <h2>Wybierz kurs:</h2>
            {% for course in courses %}
                <a href="{{ path('show_course_lectures', {"course": course}) }}" ><button class="btn btn-primary" type="button">
                    {{ course }}
                </button></a>
            {% endfor %}
    <h3>Lista udostępnionych wykładów</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th><th>Kurs</th><th>Tytuł</th><th>Opis</th>Rozmiar<th>Rozmiar</th><th>Czas dodania</th><th>Typ</th><th>Nazwa pliku</th><th></th>
        </tr>
        </thead>
        <tbody>
        {% for key, file in files %}
        <tr data-toggle="collapse" data-target="#demo1" class="accordion-toggle" id="accordion">
            <td>{{ key+1 }}</td><td>{{ file.course }}</td><td>{{ file.title }}</td><td>{{ file.description }}</td><td>{{ file.size }} KB</td>
            <td>{{ file.time|date("d.m.Y H:i:s") }}</td><td>{{ file.type }}</td><td>{{ file.filename }}</td>
            <td class="text-center"><a  href="#" title="Wyświetl plik"><i class="far fa-eye fa-2x"></i></a>
                <a href ="#" title="Pobierz plik" download><i class="fa fa-file-download fa-2x"></i></a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}