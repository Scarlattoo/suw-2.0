{% extends 'base.html.twig' %}

{% block body %}
    <h2>Lista kursów</h2>
    <h4>Dodaj kurs:</h4>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="btn btn-success mt-0 ml-0" type="submit" value="Dodaj"/>
    {{ form_end(form) }}

    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>
                            <a class="btn btn-warning btn-sm m-0" href="{{ path('admin_edit_course', { 'id': course.id }) }}">Edytuj</a>
                    <a class="btn btn-danger btn-sm m-0" href="{{ path('admin_delete_course', { 'id': course.id }) }}">Usuń</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary ml-0" href="{{ path('admin_index') }}">Powrót do panelu administratora</a>
{% endblock %}
