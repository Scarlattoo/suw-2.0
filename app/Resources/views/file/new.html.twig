{% extends 'base.html.twig' %}
{% form_theme form _self %}

 {#form_errors.html.twig#}
{% block form_errors %}
    {% spaceless %}

        {% if errors|length > 0 %}
            <div class="alert alert-danger" style="display: inline-block">
                {% for error in errors %}
                    {{ error.message }}<br />
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block body %}
    <h2>Udostępnianie wykładów</h2>
    <p></p>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <a class="btn btn-primary mt-0 ml-0" href="{{ path('file_index') }}">Powrót do listy</a>
    <input class="btn btn-success mt-0 ml-0" type="submit" value="Wyślij">
    {{ form_end(form) }}

{% endblock %}
