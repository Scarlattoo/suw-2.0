{% extends 'base.html.twig' %}

{% block body %}
    <h1>Udostępnianie wykładów</h1>
    {{ form_start(form) }}
    <div class="form-group">{{ form_row(form.course) }}</div>
    <div class="form-group">{{ form_row(form.lectureFile) }}</div>
    <div class="form-group">{{ form_row(form.title) }}</div>
    <div class="form-group">{{ form_row(form.description) }}</div>
    <div class="form-group">{{ form_row(form.type) }}</div>
    <div class="form-group">{{ form_row(form.filename) }}</div>
    <input class="btn btn-primary" type="submit" value="Wyślij">
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('file_index') }}">Powrót do listy</a>
        </li>
    </ul>
{% endblock %}
